# ClipForge Ingest Service - Local Development Configuration
# Use this when running orchestrator locally and services in Docker

# Redis Configuration (Docker)
REDIS_HOST=localhost  
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2024
REDIS_URL=redis://:redis_secure_password_2024@localhost:6379

# Orchestrator Service URL (Local)
ORCHESTRATOR_URL=http://host.docker.internal:3001

# S3/LocalStack Configuration (Local)
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
S3_BUCKET_NAME=clipforge-storage
S3_ENDPOINT_URL=http://host.docker.internal:4566
S3_PUBLIC_URL=http://localhost:4566
S3_USE_SSL=false

# Storage Configuration
STORAGE_PATH=/app/storage
TEMP_DIR=/tmp/clipforge_ingest

# Processing Configuration
CHUNK_DURATION=300
CHUNK_OVERLAP=5
MAX_RESOLUTION=1080
AUDIO_BITRATE=128k
VIDEO_CODEC=h264
AUDIO_CODEC=aac
MAX_DOWNLOAD_SIZE=20GB
DOWNLOAD_TIMEOUT=900000
MAX_CONCURRENT_DOWNLOADS=3

# Service Configuration
INGEST_SERVICE_PORT=8001
PORT=8001