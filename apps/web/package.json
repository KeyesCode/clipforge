{
  "name": "@clipforge/web",
  "version": "1.0.0",
  "description": "ClipForge Web - Next.js reviewer UI for clip management and approval workflow",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rimraf .next out dist"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.0.0",
    "tailwindcss": "^3.0.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "axios": "^1.5.0",
    "socket.io-client": "^4.7.2",
    "react-query": "^3.39.0",
    "react-hook-form": "^7.45.0",
    "@hookform/resolvers": "^3.3.0",
    "zod": "^3.22.0",
    "react-player": "^2.13.0",
    "react-hotkeys-hook": "^4.4.0",
    "react-virtualized-auto-sizer": "^1.0.0",
    "react-window": "^1.8.0",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "react-modal": "^3.16.0",
    "react-dropzone": "^14.2.0",
    "react-beautiful-dnd": "^13.1.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.292.0",
    "recharts": "^2.8.0",
    "react-intersection-observer": "^9.5.0",
    "use-debounce": "^10.0.0",
    "js-cookie": "^3.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "@types/js-cookie": "^3.0.0",
    "@types/react-modal": "^3.16.0",
    "@types/react-beautiful-dnd": "^13.1.0",
    "@types/react-window": "^1.8.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/user-event": "^14.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "cross-env": "^7.0.0",
    "rimraf": "^5.0.0",
    "@next/bundle-analyzer": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}"
    ]
  },
  "keywords": [
    "clipforge",
    "video",
    "clips",
    "highlights",
    "streaming",
    "nextjs",
    "react",
    "typescript",
    "tailwindcss"
  ],
  "author": "ClipForge Team",
  "license": "MIT"
}